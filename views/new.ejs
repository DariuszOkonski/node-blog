<%- include('partials/header.ejs') %>

<div class="container border mt-4 p-3">
  <h2>New Blog</h2>
  <form action="/blogs" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input name="blog[title]" required type="text" placeholder="enter title..." class="form-control"
        aria-describedby="emailHelp">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Image</label>
      <input name="blog[image]" required type="text" placeholder="enter image..." class="form-control"
        aria-describedby="emailHelp">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Blog post</label>
      <textarea name="blog[content]" required rows="10" placeholder="enter blog post..." class="form-control"
        aria-describedby="emailHelp"></textarea>
    </div>



    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    <a class="btn btn-success btn-sm" href="/blogs">Back</a>

  </form>
</div>

<%- include('partials/footer.ejs') %>