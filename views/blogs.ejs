<%- include('partials/header.ejs') %>

<div class="container mt-4">
  <h2>See all posts</h2>

  <% posts.forEach(post => { %>
  <div class="card mb-3 p-3" style="max-width: 100%">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= post.image %>" class="card-img" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content.substring(0,50) %>...</p>
          <p class="card-text"><small class="text-muted"><%= post.created.toDateString() %></small></p>
          <a href="/blogs/<%= post._id %>" class="btn btn-sm btn-primary">Read More</a>
          <a href="/blogs/<%= post._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
          <button class="btn btn-sm btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('partials/footer.ejs') %>