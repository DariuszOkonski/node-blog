<%- include('partials/header.ejs') %>

<div class="container mt-4 p-3">
  <div class="card">
    <div class="p-3">
      <img src="<%= post.image %>" class="card-img-top" alt="...">
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
      <p class="card-text"><small class="text-muted"><%= post.created.toDateString() %></small></p>

      <a class="btn btn-success btn-sm" href="/blogs">Back</a>
      <a class="btn btn-primary btn-sm" href="/blogs/<%= post._id %>/edit">Edit</a>

      <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>