<%- include('partials/header.ejs') %>

<div class="container border mt-4 p-3">
  <h2>Edit: <%= blog.title %></h2>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input value="<%= blog.title %>" name="blog[title]" required type="text" class="form-control"
        aria-describedby="emailHelp">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Image</label>
      <input value="<%= blog.image %>" name="blog[image]" required type="text" class="form-control"
        aria-describedby="emailHelp">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Blog post</label>
      <textarea name="blog[content]" required rows="10" class="form-control"
        aria-describedby="emailHelp"><%= blog.content %></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Save changes</button>
    <a class="btn btn-success btn-sm" href="/blogs">Back</a>

  </form>
</div>

<%- include('partials/footer.ejs') %>